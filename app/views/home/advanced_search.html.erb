<div class="row row-cards">
  <div class="col-lg-3 ">
    <div class="row">
      <div class="col-md-6 col-lg-12">

      </div>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="card">
      <div class="card-header">
        <%= form_tag '/home/advanced_search', method: :get , class:"col-lg-12" do -%>
        <div class="input-group">
          <input type="text" name='q' class="form-control" placeholder="<%=t :search%>" value='<%= params[:q]%>'>
          <div class="input-group-append">
            <button type="submit" class="btn btn-secondary">
              <i class="fe fe-search"></i>
            </button>
          </div>
        </div>
        <%end%>
      </div>
      <div class="card-body">
        <% if @model_results.blank?%>
        <div class="alert alert-warning mb-4" role="alert">
          <%=t :nothing_found%>
        </div>

        <%else%>
        <% for result in @model_results%>
        <div class="form-group">
              <div class= "form-label" style= 'color: #7795c1;'><%= link_to result do%><%=raw result.excerpts.content %><%end%></div>
        </div>
        <hr class='mt-1 mb-1' />
        <%end%>
        <%end%>

      </div>
      <% if defined?(@model_results.total_pages)%>
      <div class="digg_pagination  mb-2 mt-2 mr-auto ml-auto">
          <%= will_paginate @model_results %>
      </div>
      <%end%>
    </div>
  </div>
</div>
